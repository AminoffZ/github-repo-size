{
  "manifest_version": 3,
  "name": "Your Extension Name",
  "version": "0.1.0",
  "web_accessible_resources": [
    {
      "resources": ["script.js"],
      "matches": ["https://github.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "favicon.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },
  "permissions": ["storage"]
}
